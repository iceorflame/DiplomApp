@model DiplomApplication.Models.LoginModel
@{
    ViewBag.Title = "Авторизація";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <body class="login-layout light-login">
        <style>
            * {
                font-family: "Open Sans";
            }

            h1, h2, h3, h4, h5 {
                font-family: "Open Sans";
            }
        </style>

        <div class="main-container" id="main-container">
            <div class="main-content">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6 col-sm-10 col-sm-offset-1">
                        <div class="login-container">
                            <div class="space-12 hidden-480"></div>
                            <div class="login-logo">
                                <img src="~/Content/images/mantis_logo.png">
                            </div>
                            <div class="space-24 hidden-480"></div>

                            <div class="position-relative">
                                <div class="signup-box visible widget-box no-border" id="login-box">
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <h4 class="header lighter bigger">
                                                <i class="ace-icon fa fa-sign-in"></i>
                                                Авторизація
                                            </h4>
                                            <div class="space-10"></div>
                                            <form id="login-form" method="post">
                                                <fieldset>
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <label for="username" class="block clearfix">
                                                        <span class="block input-icon input-icon-right">
                                                            @Html.EditorFor(model => model.UserLogin, new { htmlAttributes = new { @autocomplete = "off", @placeholder = "Логін", @size = "32", @maxlength = "191", @value = "", @class = "form-control autofocus" } })
                                                            @Html.ValidationMessageFor(model => model.UserLogin, "", new { @class = "text-danger" })
                                                            <i class="ace-icon fa fa-user"></i>
                                                        </span>
                                                    </label>
                                                    <label for="password" class="block clearfix">
                                                        <span class="block input-icon input-icon-right">
                                                            @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @type = "password", @placeholder = "Пароль", @size = "32", @maxlength = "1024", @class = "form-control autofocus" } })
                                                            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                                                            <i class="ace-icon fa fa-lock"></i>
                                                        </span>
                                                    </label>

                                                    <div class="space-10"></div>

                                                    <input type="submit" class="width-40 pull-right btn btn-success btn-inverse bigger-110" value="Вхід">
                                                </fieldset>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </body>
}
    @section Scripts
{
        @Scripts.Render("~/bundles/jqueryval")
    }
